<h1><strong>Editing Book</strong></h1>
<%= form_with model:@book, url:"/books/#{@book.id}",local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Update Book' %>
<% end %>
<p><%= link_to "Show", book_path(@book.id) %> | <a href="/books">Back</a></p>