
<h1><strong>Editing Book</strong></h1>
<% if @book.errors.any? %>
 <p> <%= @book.errors.count %> errors prohibited this book from being saved:</p>
  <% @book.errors.full_messages.each do |message| %>
    <p>:<%= message %></p>
  <% end %>
<% end %>
<%= form_with model:@book, url:"/books/#{@book.id}",local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Update Book' %>
<% end %>
<p><%= link_to "Show", book_path(@book.id) %> | <a href="/books">Back</a></p>